@using System.Globalization
@using BankingClient.Core.Dto
<div class="card shadow-sm w-100">
  <div class="card-body">
    <h5 class="card-title">Buchungen</h5>

    @if (Transactions?.Any() == true) {
      <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
        <table class="table table-sm table-striped table-hover">
          <thead>
          <tr>
            <th class="fw-normal">Datum</th>
            <th class="fw-normal">Betrag</th>
            <th class="fw-normal">Aktionen</th>
          </tr>
          </thead>
          <tbody>
          @foreach (var transaction in Transactions) {
            <tr>
              <td>@transaction.Date.ToString("d", CultureInfo.CurrentCulture)</td>
              <td>@transaction.Amount.ToString("C", CultureInfo.CurrentCulture)</td>
              <td>@transaction.</td>
              @* <td> *@
              @*   <button class="btn btn-primary btn-sm" @onclick="() => OnOpenAccount.InvokeAsync(account.Id)"> *@
              @*     Konto öffnen *@
              @*   </button> *@
              @* </td> *@
            </tr>
          }
          </tbody>
        </table>
      </div>
    }
    else {
      <p>Keine Konten verfügbar.</p>
    }
  </div>
</div>

@code {
  [Parameter] public List<TransactionDto>? Transactions { get; set; }
  [Parameter] public EventCallback<Guid> OnOpenTransaction { get; set; }
}
